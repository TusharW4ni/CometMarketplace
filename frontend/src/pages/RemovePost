import React from 'react';
import axios from 'axios';

const RemovePostButton = ({ userId, postId }) => {
  const handleRemovePost = async () => {
    if (window.confirm('Are you sure you want to delete this post?')) {
      try {
        const response = await axios.delete('YOUR_BACKEND_BASE_URL/api/user/remove-post', {
          data: { userId, postId },
        });
        console.log(response.data);
        alert('Post removed successfully');
        // Optionally, refresh the list of posts or redirect the user
      } catch (error) {
        console.error('Error removing post:', error);
        alert('Failed to remove the post');
      }
    }
  };

  return (
    <button onClick={handleRemovePost}>
      Remove Post
    </button>
  );
};

export default RemovePostButton;