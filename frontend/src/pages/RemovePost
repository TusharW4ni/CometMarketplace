//keejun
import React from 'react'; 
import axios from 'axios'; 

// Defines RemovePostButton component with userId and postId props.
const RemovePostButton = ({ userId, postId }) => {
  // Function to handle post removal.
  const handleRemovePost = async () => {
    // Confirms with the user before deletion.
    if (window.confirm('Are you sure you want to delete this post?')) {
      try {
        // Sends a DELETE request to the server with userId and postId.
        const response = await axios.delete('YOUR_BACKEND_BASE_URL/api/user/remove-post', {
          data: { userId, postId },
        });
        console.log(response.data); // Logs server response.
        alert('Post removed successfully'); // Alerts on successful deletion.
      } catch (error) {
        console.error('Error removing post:', error); // Logs error on failure.
        alert('Failed to remove the post'); // Alerts on failure to delete.
      }
    }
  };

  // Renders the remove post button.
  return (
    <button onClick={handleRemovePost}>
      Remove Post
    </button>
  );
};

export default RemovePostButton; // Exports the component.