datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                Int                 @id @default(autoincrement())
  email             String              @unique
  name              String?
  posts             Post[]
  userRatingMapping UserRatingMapping[]
  archived          Boolean             @default(false)
}

model Rating {
  id                Int                 @id @default(autoincrement())
  comment           String?
  stars             Int
  userRatingMapping UserRatingMapping[]
}

model UserRatingMapping {
  id       Int    @id @default(autoincrement())
  user     User   @relation(fields: [userId], references: [id])
  userId   Int
  rating   Rating @relation(fields: [ratingId], references: [id])
  ratingId Int
}

model Post {
  id           Int      @id @default(autoincrement())
  title        String?
  desc         String?
  price        Int?
  photosFolder String?
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  archived     Boolean  @default(false)
}
