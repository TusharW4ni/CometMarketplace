datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id           Int      @id @default(autoincrement())
  title        String?
  desc         String?
  price        Int?
  photosFolder String?
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  archived     Boolean  @default(false)
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  name            String?
  posts           Post[]
  archived        Boolean  @default(false)
  reportsMade     Report[] @relation("UserReporting")
}

model Report {
  id                Int      @id @default(autoincrement())
  userReporting     User     @relation("UserReporting", fields: [userReportingId], references: [id])
  userReportingId   Int
  url               String?
  reportType        String?
  reportDescription String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  archived          Boolean  @default(false)
}